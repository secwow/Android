<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <color name="primary_green">#3a8000</color>

    <style name="text_regular_style_green">
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">#888</item>
        <item name="android:textColor">#5ecf01</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">Arial</item>
    </style>

    <style name="text_title_style_green">
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">#888</item>
        <item name="android:textColor">@color/primary_green</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">Arial</item>
    </style>

    <style name="button_style_green">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@color/primary_green</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">Arial</item>
    </style>

    <style name="action_bar_style_green" parent="android:Theme.Light">
        <item name="android:textColor">#FFFFFF</item>
        <item name="background">@color/primary_green</item>
        <item name="android:background">#3a8000</item>
        <item name="android:fontFamily">Arial</item>
    </style>

    <color name="primary_purple">#81008b</color>

    <style name="text_regular_style_purple">
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">#888</item>
        <item name="android:textColor">@color/primary_purple</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">Arial</item>
    </style>

    <style name="text_title_style_purple">
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">#888</item>
        <item name="android:textColor">@color/primary_purple</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">Arial</item>
    </style>

    <style name="button_style_purple">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@color/primary_purple</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">Arial</item>
    </style>

    <style name="action_bar_style_purple" parent="android:Theme.Light">
        <item name="android:textColor">#FFFFFF</item>
        <item name="background">@color/primary_purple</item>
        <item name="android:background">@color/primary_purple</item>
        <item name="android:fontFamily">Arial</item>
    </style>

</resources>
